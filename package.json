{
    "name": "@arkecosystem/crypto-fixture-generator",
    "version": "1.0.0",
    "description": "A CLI to generate cryptography & transaction fixtures for the Ark Blockchain.",
    "keywords": [
        "ark",
        "blockchain",
        "cli",
        "crypto",
        "testing"
    ],
    "license": "MIT",
    "contributors": [
        "Brian Faust <brian@ark.io>"
    ],
    "bin": {
        "ark:fixture": "./bin/cli"
    },
    "scripts": {
        "cli": "./bin/cli",
        "lint": "eslint ./ --fix",
        "format": "prettier --write \"./*.{ts,js,json,md}\" \"./lib/**/*.{ts,js,json,md}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@arkecosystem/crypto": "^2.5.1",
        "clipboardy": "^2.1.0",
        "commander": "^2.20.0"
    },
    "devDependencies": {
        "depcheck": "^0.8.3",
        "eslint": "^6.0.1",
        "eslint-config-standard": "^13.0.1",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.0",
        "husky": "^3.0.0",
        "jest": "^24.8.0",
        "jest-extended": "^0.11.2",
        "lint-staged": "^9.2.0",
        "prettier": "^1.18.2",
        "regenerator-runtime": "^0.13.2",
        "standard": "^13.0.2"
    }
}
