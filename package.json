{
    "name": "@arkecosystem/crypto-fixture-generator",
    "version": "1.0.0",
    "description": "A CLI to generate cryptography & transaction fixtures for the Ark Blockchain.",
    "keywords": [
        "ark",
        "blockchain",
        "cli",
        "crypto",
        "testing"
    ],
    "license": "MIT",
    "contributors": [
        "Brian Faust <brian@ark.io>"
    ],
    "files": [
        "/bin",
        "/dist",
        "/oclif.manifest.json"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "bin": {
        "fixture": "./bin/run"
    },
    "scripts": {
        "fixture": "./bin/run",
        "build": "yarn clean && tsc",
        "build:watch": "yarn build -w",
        "clean": "rimraf .coverage dist tmp",
        "lint": "./node_modules/eslint/bin/eslint.js src --ext .ts --fix",
        "format": "yarn lint && yarn prettier",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./src/**/*.{ts,js,json,md}\"",
        "prepack": "./node_modules/.bin/oclif-dev manifest && npm shrinkwrap",
        "postpack": "rm -f oclif.manifest.json",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@arkecosystem/crypto": "^2.6.0-alpha.1",
        "@oclif/command": "^1.5.19",
        "@oclif/config": "^1.13.3",
        "@oclif/plugin-autocomplete": "^0.1.4",
        "@oclif/plugin-commands": "^1.2.3",
        "@oclif/plugin-help": "^2.2.1",
        "@oclif/plugin-not-found": "^1.2.3",
        "@oclif/plugin-plugins": "^1.7.8",
        "clipboardy": "^2.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@oclif/dev-cli": "^1.22.2",
        "@sindresorhus/tsconfig": "^0.4.0",
        "@types/prettier": "^1.18.3",
        "@typescript-eslint/eslint-plugin": "^2.3.2",
        "@typescript-eslint/parser": "^2.3.2",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-jest": "^22.17.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-simple-import-sort": "^4.0.0",
        "husky": "^3.0.8",
        "jest": "^24.9.0",
        "jest-extended": "^0.11.2",
        "lint-staged": "^9.4.1",
        "prettier": "^1.18.2",
        "typescript": "^3.6.3"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "oclif": {
        "commands": "./dist/commands",
        "bin": "crypto-fixture-generator",
        "plugins": [
            "@oclif/plugin-autocomplete",
            "@oclif/plugin-commands",
            "@oclif/plugin-help"
        ]
    }
}
